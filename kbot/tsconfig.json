{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES2021",
        "allowJs": true,
        "moduleResolution": "Node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true
    },
    "include": ["src"]
}
